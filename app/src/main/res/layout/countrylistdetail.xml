<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/detailsCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                app:cardBackgroundColor="@color/lightBlue"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_8dp"
                    android:layout_margin="@dimen/margin_4dp"
                    android:orientation="vertical"
                    android:background="@color/lightBlue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_text_view_detail"
                            style="@style/HeaderTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="@font/amaranth"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:padding="@dimen/margin_4dp"
                            android:text="Loading..."
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_4dp">

                        <TextView
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flag:" />

                        <ImageView
                            android:id="@+id/flag_image_view_detail"
                            android:layout_width="100dp"
                            android:layout_marginLeft="@dimen/margin_4dp"
                            android:layout_height="50dp"
                            android:background="@color/black"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_2dp">

                        <TextView
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capital:" />

                        <TextView
                            android:id="@+id/capital_text_view_detail"
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:text="Loading..." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_2dp">

                        <TextView
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area:" />

                        <TextView
                            android:id="@+id/area_text_view_detail"
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:text="Loading..."
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_2dp">

                        <TextView
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Population:" />

                        <TextView
                            android:id="@+id/population_text_view_detail"
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:text="Loading..." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_2dp">

                        <TextView
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Region:" />

                        <TextView
                            android:id="@+id/region_text_view_detail"
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:text="Loading..." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_2dp">

                        <TextView
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Zone:" />

                        <TextView
                            android:id="@+id/time_zone_text_view_detail"
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:text="Loading..." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_2dp">

                        <TextView
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Language:" />

                        <TextView
                            android:id="@+id/language_text_view_detail"
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:text="Loading..." />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/margin_2dp">

                        <TextView
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Currency:" />

                        <TextView
                            android:id="@+id/currency_text_view_detail"
                            style="@style/DefaultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:text="Loading..." />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mapCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/detailsCardView">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>